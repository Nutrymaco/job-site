{
  "analysis": {
    "filter": {
      "autocomplete_filter": {
        "type": "edge_ngram",
        "min_gram": "1",
        "max_gram": "10"
      }
    },
    "analyzer": {
      "autocomplete": {
        "filter": "lowercase",
        "type": "custom",
        "tokenizer": "standard"
      },
      "description-analyzer": {
        "char_filter": [
                      "html_strip"
                    ],
        "tokenizer": "standard"
      }
    },
    "tokenizer": {
      "by_one_char_tokenizer": {
        "type": "char_group",
        "tokenize_on_chars": [
          "whitespace", "letter", "digit", "punctuation"
        ]
      }
    }
  }
}

